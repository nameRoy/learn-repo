{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "preid": "SNAPSHOT"
    }
  },
  "changelogPreset": {
    "name": "conventionalcommits",
